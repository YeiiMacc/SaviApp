<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
tools:context=".ui.slideshow.SlideshowFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--        -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- -->
        <TextView
            android:id="@+id/titleSucursales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/modernantiqua"
            android:textSize="46dp"
            android:textAlignment="center"
            android:text="@string/menu_slideshow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSucursal1"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/sc1" />

            <TextView
                android:id="@+id/titleSucursal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="Bogotá " />

            <TextView
                android:id="@+id/descriptionSucursal1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="carrera 12 # 82 – 48" />

            <Button
                android:id="@+id/btnCallS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:text="Solicitar reservación" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSucursal2"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/sc2" />

            <TextView
                android:id="@+id/titleService1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="Medellín " />

            <TextView
                android:id="@+id/descriptionService1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="calle 45 # 67 – 86" />

            <Button
                android:id="@+id/btnCallR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:text="Solicitar reservación" />

        </LinearLayout>

        <!--        -->
    </LinearLayout>
    <!--        -->
</ScrollView>


</LinearLayout>